<UserControl x:Class="SimElation.Simhub.SliPlugin.StatusLedArray"
			 x:Name="statusLedArray"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimElation.Simhub.SliPlugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../../Properties/Styles.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<local:IsDashBindingDataModeNotNone x:Key="IsDashBindingDataModeNotNone" />
		</ResourceDictionary>
	</UserControl.Resources>

	<GroupBox Header="{Binding Path=Title, ElementName=statusLedArray}">
		<ItemsControl HorizontalAlignment="Center" ItemsSource="{Binding Path=StatusLeds, ElementName=statusLedArray}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<!-- Default template is vertical layout, so override. -->
					<StackPanel Orientation="{Binding Path=Orientation, ElementName=statusLedArray}"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>

			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<!-- Note only OneTime bind mode. IsChecked is handled in the code behind after initialisation. -->
					<ToggleButton Style="{StaticResource LedToggleButtonStyle}" Margin="4,4,4,4"
								  local:ThemeProperties.SetLedBrush="{Binding Path=SetBrush}"
								  IsChecked="{Binding Path=BindingData,
									  Converter={StaticResource IsDashBindingDataModeNotNone}, Mode=OneTime}"
								  Click="OnClick"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</GroupBox>
</UserControl>
